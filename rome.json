{
	"$schema": "./node_modules/rome/configuration_schema.json",
	"formatter": {
		"enabled": true,
		"ignore": ["./public/browser", "./public/bundles"]
	},
	"linter": {
		"enabled": true,
		"ignore": ["./public/browser", "./public/bundles"],
		"rules": {
			"recommended": true,
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
